  "author": "",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@adonisjs/ace": "^5.0.1",
    "@adonisjs/ally": "github:duyluonglc/adonis-ally#develop",
    "@adonisjs/auth": "^3.0.5",
    "@adonisjs/bodyparser": "^2.0.2",
    "@adonisjs/cors": "^1.0.5",
    "@adonisjs/fold": "^4.0.7",
    "@adonisjs/framework": "^5.0.6",
    "@adonisjs/ignitor": "^2.0.6",
    "@adonisjs/mail": "^3.0.3",
    "@adonisjs/session": "^1.0.23",
